@model DemoMVC.Models.AddInfoViewModel

@{
}

<h1>Add User</h1>
<form method="post" action="AddAPI" class="mt-5">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>

    <div class="form-group">
        <label for="phone">Contact No:</label>
        <input type="tel" class="form-control" asp-for="Phone">
    </div>

    <div class="form-group">
        <label for="stored">Stored From:</label>
        <input type="text" class="form-control" asp-for="StoredFrom">
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>